<h1>Konkurso nuotraukos</h1>
<div class="row pt-5">
    {{#each}}
    <div class="col-4 py-3">
        <img src="{{photo}}" alt="{{name}}" />
        <div class="d-flex justify-content-between align-items-center">
            <h5>{{name}}</h5>
            <div class="author">{{userInfo.name}} {{userInfo.last_name}}</div>
            <div class="rating">Ä®vertinimas: {{totalRating}}</div>
        </div>
        <div class="rating">
            <form action="/gallery/{{@key}}" method="POST" class="imput-group">
                {{!-- {{<input type="hidden" name="id" value="{{@key}}">}} --}}
                <select name="rating" class="form-control">
                    <option value="5">5 *</option>
                    <option value="4">4 *</option>
                    <option value="3">3 *</option>
                    <option value="2">2 *</option>
                    <option value="1">1 *</option>
                </select>
                <button class="btn btn-primary">Vertinti</button>
            </form>
        </div>
    </div>
    {{/each}}
</div>